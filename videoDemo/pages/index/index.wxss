/**index.wxss**/

/* 容器布局 */

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  align-items: center;
}

/* 视频布局 */

video {
  width: 90%;
  height: 380rpx;
  align-items: center;
}

/* 信息布局 */

.information {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 20rpx;
}

.information .current {
  padding-left: 5rpx;
}

.information .currentTitle {
  flex-grow: 1;
}

/* 弹幕区布局 */

.danMu {
  width: 90%;
  height: 80rpx;
  display: flex;
  margin: 20rpx;
  flex-direction: row;
}

.danMu input {
  /* width: 50%; */
  height: 60rpx;
  margin: 10rpx;
  flex-grow: 1;
  border: black 1rpx solid;
}

.danMu button {
  /* width: %; */
  height: 60rpx;
  margin: 10rpx;
  background-color: white;
  border: black solid 1rpx;
}

/* 播放列表布局 */

.playList {
  width: 90%;
  height: 690rpx;
  border: black solid 1rpx;
}

.videoBar {
  width: 95%;
  display: flex;
  flex-direction: row;
  margin: 10rpx;
  border-bottom: black solid 1rpx;
}

.videoBar image {
  height: 40rpx;
  width: 40rpx;
  margin: 10rpx;
}

.videoBar text {
  font-size: 30rpx;
  margin: 10rpx;
  flex-grow: 1;
}

.support {
  width: 90%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border: black solid 1rpx;
}

.support image{
  width: 60rpx;
height: 60rpx;
padding: 30rpx;
}
